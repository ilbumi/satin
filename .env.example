# Satin Configuration Example
# Copy this file to .env and modify the values as needed

# MongoDB Configuration
MONGO_DATABASE=satin
MONGO_ROOT_PASSWORD=your-secure-root-password
MONGO_USER=satin-user
MONGO_PASSWORD=your-secure-user-password

# Backend server settings
SATIN_BACKEND_HOST=localhost
SATIN_BACKEND_PORT=8000
SATIN_RELOAD=false

# CORS allowed origins (JSON array format)
SATIN_CORS=["http://localhost:5173"]

# Docker Compose specific settings
BACKEND_PORT=8000
FRONTEND_PORT=3000
MONGO_PORT=27017

# Computed MongoDB DSN (used by backend)
SATIN_MONGO_DSN=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/${MONGO_DATABASE}
